<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToevoegenBuurthuis">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Naam*"/>

    <EditText
        android:id="Voornaam"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:labelFor="@id/textView2"
        android:hint="Naam van Buurthuis"
        android:importantForAutofill="no" tools:targetApi="o" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_row="1"
        android:layout_column="0"
        android:text="Adres*" />

    <EditText
        android:id="TussenVoegsel"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:labelFor="@id/textView4"
        android:hint="Straat + Huisnummer"
        android:importantForAutofill="no" tools:targetApi="o"
        android:layout_row="1"
        android:layout_column="1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_row="2"
        android:layout_column="0"
        android:text="Postcode*" />

    <EditText
        android:id="Achternaam"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_row="2"
        android:layout_column="1"
        android:hint="1111 AA"
        android:importantForAutofill="no"
        android:inputType="text"
        android:labelFor="@id/textView5"
        tools:targetApi="o" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_row="4"
        android:layout_column="0"
        android:text="Contactpersoon*" />

    <EditText
        android:id="@+id/eEmail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint=""
        android:importantForAutofill="no"
        android:inputType="text"
        android:labelFor="@id/textView3"
        tools:ignore="TextFields"
        tools:targetApi="o" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Telefonnnummer*" />

    <EditText
        android:id="@+id/eTelefoonnummer"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="Telefonnnummer"
        android:importantForAutofill="no"
        android:inputType="text"
        android:labelFor="@id/textView4"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_row="5"
        android:layout_column="0"
        android:text="Plaats*" />

    <EditText
        android:id="LandHerkomst"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint=""
        android:importantForAutofill="no"
        android:inputType="text"
        android:labelFor="@id/textView7"
        tools:targetApi="o" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="1"
        android:text="Aanmelden" />

</GridLayout>